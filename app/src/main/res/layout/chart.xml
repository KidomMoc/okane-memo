<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartActivity">

    <ImageView
        android:id="@+id/btn_pie_chart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/pie_chart" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="59dp"
        android:text="@string/pieChart"
        android:textColor="@color/black_light"
        android:textSize="15sp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/pie_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <ImageView
        android:id="@+id/btn_bubble_chart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/bubble_chart" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="460dp"
        android:text="@string/bubbleChart"
        android:textColor="@color/black_light"
        android:textSize="15sp" />

    <lecho.lib.hellocharts.view.BubbleChartView
        android:id="@+id/bubble_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="496dp" />

    <ImageView
        android:id="@+id/btn_bar_chart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="860dp"
        android:layout_marginRight="220dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/bar_chart" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="860dp"
        android:text="@string/columnChart"
        android:textColor="@color/black_light"
        android:textSize="15sp" />

    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/column_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="896dp" />

</RelativeLayout>